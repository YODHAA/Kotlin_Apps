<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listItemRowContainer"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    tools:background="@android:color/holo_green_light"
    >

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        style="@style/TextAppearance.listItemtitle"
        android:layout_marginStart="?attr/listItemTextIconMargin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="?attr/listItemTitleSubtitleMargin"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/detail"
        app:layout_constraintStart_toEndOf="@+id/rowIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/fab_margin"
        app:layout_goneMarginEnd="@dimen/fab_margin"
        app:layout_goneMarginStart="@dimen/fab_margin"
        android:text="ListItem"
        android:textColor="@color/graphite20"
        tools:visibility="visible"
        />

     <androidx.appcompat.widget.AppCompatCheckedTextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:id="@+id/detail"
         style="@style/TextAppearance.listItemSubtitle"
         android:layout_marginStart="?attr/listTextIconMargin"
         android:layout_marginBottom="@dimen/fab_margin"
         android:layout_marginLeft="?attr/listTextIconMargin"
         android:visibility="gone"
         app:layout_constraintBottom_toTopOf="@+id/listItemUnderline"
         app:layout_constraintHorizontal_weight="0.5"
         app:layout_constraintStart_toEndOf="@+id/rowIcon"
         app:layout_constraintBottom_toBottomOf="@+id/title"
         app:layout_goneMarginEnd="@dimen/fab_margin"
         app:layout_goneMarginStart="@dimen/fab_margin"
         app:layout_goneMarginTop="@dimen/fab_margin"
         android:text="Detail"
         tools:visibility="visible"
         />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/rowIcon"
         android:layout_marginStart="@dimen/fab_margin"
         android:layout_marginTop="@dimen/fab_margin"
         android:layout_marginBottom="@dimen/fab_margin"
         android:visibility="gone"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         tools:src="@drawable/ic_launcher_background"
         tools:visibility="visible"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smileIcon"
        android:layout_marginEnd="@dimen/fab_margin"
        android:src="@drawable/ic_launcher_background"
        android:tint="@color/cardview_light_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nextIcon"
        app:layout_constraintBottom_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"
        tools:visibility="visible"
        android:layout_marginRight="@dimen/fab_margin" />








</androidx.constraintlayout.widget.ConstraintLayout>